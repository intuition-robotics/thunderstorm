{
  "extends": "../../../dev-tools/typescript/tsconfig-lib-tsx.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "../../build",
    "rootDir": ".",
    "paths": {
      "@components/*": [
        "app/components/*"
      ],
      "@pages/*": [
        "app/pages/*"
      ],
      "@modules/*": [
        "modules/*"
      ],
      "@renderers/*": [
        "app/renderers/*"
      ],
      "@res/*": [
        "res/*"
      ],
      "@themes/*": [
        "themes/*"
      ]
    },
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  }
}
